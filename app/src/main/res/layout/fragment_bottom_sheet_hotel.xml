<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Фото отеля -->
            <ImageView
                android:id="@+id/hotelImageView"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                app:cardCornerRadius="8dp"
                tools:src="@drawable/ic_hotel1" />

            <!-- Название / локация / цена -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hotelNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_semibold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="Elysian Suites" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_small"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/hotelLocationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/jost_medium"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        tools:text="San Diego, CA" />

                </LinearLayout>

                <TextView
                    android:id="@+id/hotelPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/jost_medium"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    tools:text="$320 /night" />

            </LinearLayout>

            <!-- Рейтинг -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"
                    app:tint="#FFC107" />

                <TextView
                    android:id="@+id/hotelRatingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/jost_semibold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    tools:text="4.7" />

            </LinearLayout>

        </LinearLayout>

        <!-- Кнопки: бронирование и чат -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background_blue"
                android:fontFamily="@font/jost_semibold"
                android:text="Booking Now"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/chatButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#F2F2F2"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chat_item"
                    app:tint="#757575" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
